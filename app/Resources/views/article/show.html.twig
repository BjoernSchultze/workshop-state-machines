{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Article "{{ article.title}}"</h1>
    <p>
        <code>
            AppBundle\Entity\Article::marking
        </code>
        =
        <code>{{ article.marking|keys|join('</code>, <code>')|default('[]')|raw }}</code>
    </p>
    <p>
        This object apply the following transitions:
        <form action="{{ url('article_apply_transition', {id: article.id}) }}" method="post" class="form-inline">
            {% for transition in workflow_available_transitions(article) %}
                <button type="submit" class="btn btn-default" name="transition" value="{{ transition.name }}">{{ transition.name }}</button>
            {% else %}
                The object can not apply any transition
            {% endfor %}
        </form>
    </p>
    <p>
        <form action="{{ url('article_reset_marking', {id: article.id}) }}" method="post" class="form-inline">
            <button type="submit" class="btn btn-warning">Reset marking</button>
        </form>
    </p>
{% endblock %}
