{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Article List</h1>
    <ul class="list-unstyled">
        {% for article in articles %}
            <li>
                <a href="{{ url('article_show', {id: article.id}) }}">
                    {{ article.title }}
                </a>
            </li>
        {% else %}
            <li>
                <p>
                    There is not article, Add one ?
                </p>

                <form action="{{ url('article_create') }}" method="post"  class="form-inline">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" id="title" name="title" value="My first article" class="form-control" />
                    </div>
                    <button type="submit"  class="btn btn-default">create</button>
                </form>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
